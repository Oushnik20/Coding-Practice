class Solution {
    public static int minCost(int[] arr) {
        // code here
        PriorityQueue<Integer> pq= new PriorityQueue<>();
        for(int i=0; i<arr.length; i++){
            pq.add(arr[i]);
        }
        int sum=0;
        while(pq.size()>1){
            int temp1=pq.poll();
            int temp2=pq.poll();
            int temp=temp1+temp2;
            sum+=temp;
            pq.add(temp);
        }
        return sum;
    }
}
