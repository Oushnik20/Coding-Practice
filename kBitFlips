class Solution {
    public int kBitFlips(int[] arr, int k) {
        // code here
        int n = arr.length, flips = 0, curr = 0;
        int[] isFlipped = new int[n];
        
        for (int i = 0; i < n; i++) {
            if (i >= k) curr ^= isFlipped[i - k]; 
            if ((arr[i] ^ curr) == 0) {
                if (i + k > n) return -1;
                flips++;
                curr ^= 1;
                isFlipped[i] = 1;
            }
        }
        return flips;
    }
}
